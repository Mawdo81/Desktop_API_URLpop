{
  "manifest_version": 3,
  "name": "Bria Animana Integration",
  "version": "1.0",
  "description": "Opens Animana record when an incoming call is received in Bria.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
